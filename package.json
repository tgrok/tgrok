{
  "name": "tgrok",
  "version": "0.1.0",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "run-s watch",
    "clean:build": "rimraf \"{packages,out}/*/dist\"",
    "clean:dist": "rimraf dist/*",
    "clean:types": "rimraf packages/*/index.d.ts",
    "clean:modules": "lerna clean --yes",
    "clean": "run-s clean:*",
    "floss": "cross-env TS_NODE_PROJECT=tsconfig.tests.json floss -r ts-node/register/transpile-only -p test",
    "test": "run-s lint:tests floss",
    "unit-test": "npm run floss -- --",
    "unit-test:debug": "npm run floss -- --debug --",
    "precoverage": "run-s lint:tests",
    "coverage": "nyc run-s floss && nyc report --reporter=html",
    "coverage:ci": "run-s coverage && nyc report --reporter=text-lcov > coverage.lcov",
    "predocs": "mkdirp build/docs && rimraf build/docs/*",
    "docs": "webdoc -R README.md",
    "lint:src": "eslint --ext .js --ext .ts packages --ignore-path .gitignore --max-warnings 0",
    "lint:vue": "eslint --ext .vue packages --ignore-path .gitignore --max-warnings 0",
    "lint": "run-s lint:*",
    "lintfix": "run-s \"lint:* --fix\"",
    "types": "tsc -noEmit",
    "build": "run-s clean:build build:dev build:types",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "build:dev": "rollup -c",
    "build:types": "rimraf out && tsc --declaration --emitDeclarationOnly --skipLibCheck --outDir out/packages/ && api-extractor-lerna-monorepo && rimraf out",
    "build:playground": "rimraf build && lerna run build && ts-node copyPlaygrounds.ts",
    "watch": "rollup -cw",
    "dist": "run-s lint:src types build:prod docs",
    "postdist": "copyfiles -f bundles/*/dist/browser/* dist && copyfiles -f \"packages/**/dist/browser/*\" dist/packages",
    "prerelease": "check-node-version --npm=\">=7 <7.20.3\" && run-s clean:build test",
    "postversion": "run-s lint:src types build:prod build:types",
    "release": "lerna version --exact --force-publish",
    "version": "ts-node scripts/fixPeerVersions.ts && npm i --package-lock-only && git add package-lock.json",
    "prepublish-ci": "run-s build:types",
    "publish-ci": "lerna publish from-package --yes --no-verify-access",
    "webdoc": "webdoc"
  },
  "private": true,
  "pre-commit": [
    "lintfix"
  ],
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@microsoft/api-extractor": "^7.9.11",
    "@pixi-build-tools/api-extractor-lerna-monorepo": "1.0.3",
    "@pixi/webdoc-template": "^1.5.3",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/mocha": "^8.2.3",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@vitejs/plugin-vue": "^2.3.2",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@webdoc/cli": "^1.5.5",
    "babel-eslint": "^10.1.0",
    "chai": "~3.5.0",
    "check-node-version": "^4.2.1",
    "copy-webpack-plugin": "^5.1.1",
    "copyfiles": "^2.4.1",
    "core-js": "^2.6.12",
    "cross-env": "^5.2.0",
    "electron": "18.2.0",
    "eslint": "^7.2.0",
    "eslint-plugin-vue": "^8.5.0",
    "floss": "^5.0.0",
    "fs-extra": "^10.1.0",
    "glob": "^7.1.3",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "rimraf": "^2.6.3",
    "rollup": "^2.72.0",
    "rollup-plugin-jscc": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript": "^1.0.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.10.1",
    "tslib": "^2.4.0",
    "typescript": "~4.1.5",
    "vite": "^2.9.8",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.3",
    "vue-property-decorator": "^9.1.2",
    "vue-router": "^3.2.0",
    "vue-template-compiler": "^2.6.11",
    "vue-tsc": "^0.34.11",
    "vuex": "^4.0.2",
    "webpack-cli": "^4.7.2",
    "webpack-notifier": "^1.15.0",
    "workspaces-run": "^1.0.1"
  }
}
